<DefaultWindow xmlns="https://spacestation14.io"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
         xmlns:style="clr-namespace:Content.Client.Stylesheets"
         xmlns:lobbyui="clr-namespace:Content.Client.Lobby.UI"
         MinSize="800 500"
         SetSize="1100 750">
    <Control>
        <PanelContainer Name="BackgroundPanel" />
        <BoxContainer Orientation="Vertical" SeparationOverride="0">
            <BoxContainer Orientation="Horizontal" VerticalExpand="True" SeparationOverride="0">
                <ScrollContainer MinSize="250 0" Margin="5 5 0 0">
                    <BoxContainer Name="Characters" Orientation="Vertical" />
                </ScrollContainer>
                <PanelContainer MinSize="2 0">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="{x:Static style:StyleLora.LoraPurple}" ContentMarginTopOverride="2" />
                    </PanelContainer.PanelOverride>
                </PanelContainer>
                <BoxContainer Name="CharEditor" HorizontalExpand="True" />
            </BoxContainer>
        </BoxContainer>
    </Control>
</DefaultWindow>
